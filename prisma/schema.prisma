model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String

  createdAt DateTime @default(now())

  quizzes Quiz[]
}

model Quiz {
  id Int @id @default(autoincrement())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title       String
  description String
  questions   Question[]

  likes Int @default(0)

  creator   User? @relation(fields: [creatorId], references: [id])
  creatorId Int?
}

